<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFC4"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/horario_disciplina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disciplina"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/horario_professor"
        style="@style/tam_texto_detalhes_horario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Professor"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dia_semana"
            style="@style/tam_texto_detalhes_horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="DiaSemana, "
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/horario_horario"
            style="@style/tam_texto_detalhes_horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="Periodo"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/sala"
            style="@style/tam_texto_detalhes_horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sala"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

</LinearLayout>